{{>layout/header}}
<h1>register your post</h1>
<form>
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" placeholder="fill in the title"/>
    </div>
    <div>
        <label for="author">Author</label>
        <input type="text" id="author" placeholder="fill in the author"/>
    </div>
    <div>
        <label for="content">Content</label>
        <textarea id="content" placeholder="fill in the content"></textarea>
    </div>
    <a href="/" role="button">Cancel</a>
    <button type="button" id="btn-save">Register</button>
</form>
{{>layout/footer}}
